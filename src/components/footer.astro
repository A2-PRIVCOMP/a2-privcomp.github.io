---
import { Icon } from "astro-icon/components";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://twitter.com/A2_privcomp",
    description: "A2-PRIVCOMP en Twitter",
    icon: "fa-brands:twitter",
  },
  {
    url: "https://www.facebook.com/profile.php?id=61557100457478",
    description: "A2-PRIVCOMP en Facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://www.linkedin.com/groups/13004206/",
    description: "A2-PRIVCOMP en LinkedIn",
    icon: "fa-brands:linkedin-in",
  },
  {
    url: "https://github.com/A2-PRIVCOMP",
    description: "A2-PRIVCOMP en Github",
    icon: "fa-brands:github",
  }
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden gradient-background">

  </div>
  <ul class="relative grid grid-cols-2 gap-10 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current text-white p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full text-white" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
